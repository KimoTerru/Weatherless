<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".presentation.home.calendarscreens.day.DayFragment">

    <include
        android:id="@+id/content_of_day_include"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/content_of_day"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_progressbar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/windy_anim"/>

    <include
        android:id="@+id/content_of_error_include"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/content_of_error" />

</LinearLayout>